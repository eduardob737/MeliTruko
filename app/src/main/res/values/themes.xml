<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MeliTruko" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
         <item name="colorPrimary">@color/azul_marinho</item>
         <item name="colorSecondary">@color/white</item>
        <item name="fontFamily">@font/jockey_one_regular</item>
    </style>

    <style name="Theme.MeliTruko" parent="Base.Theme.MeliTruko" />

    <style name="playerPhoto" parent="Base.Theme.MeliTruko">
        <item name="android:radius">10dp</item>
    </style>

    <style name="TextAppearance.StyleChip" parent="TextAppearance.AppCompat.Body1">
        <item name="android:fontFamily">@font/jockey_one_regular</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="Theme.SelectorChip" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_style_color</item>
        <item name="android:textColor">@color/chip_style_text_color</item>
        <item name="fontFamily">@font/jockey_one_regular</item>
        <item name="android:fontFamily">@font/jockey_one_regular</item>
        <item name="android:textAppearance">@style/TextAppearance.StyleChip</item>
        <item name="android:textAlignment">center</item>
    </style>

</resources>