<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <View
        android:id="@+id/view_blue_team"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="-2dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/style_view_blue_team"
        app:layout_constraintEnd_toStartOf="@+id/view_white_team"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_white_team"
        android:layout_width="0dp"
        android:layout_height="200dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="-2dp"
        android:background="@drawable/style_view_white_team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/view_blue_team"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player1_blue"
        style="@style/ImageViewPlayerPhotoMatch"
        tools:srcCompat="@drawable/img_profile"
        android:layout_marginStart="10dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/view_blue_team"
        app:layout_constraintTop_toTopOf="@+id/view_blue_team" />

    <TextView
        android:id="@+id/tv_name_player1_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/txt_blue"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1_blue"
        app:layout_constraintStart_toEndOf="@+id/iv_player1_blue"
        app:layout_constraintTop_toTopOf="@+id/iv_player1_blue" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player2_blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/view_blue_team"
        app:layout_constraintTop_toBottomOf="@+id/iv_player1_blue"
        style="@style/ImageViewPlayerPhotoMatch"
        tools:srcCompat="@drawable/img_profile" />

    <TextView
        android:id="@+id/tv_name_player2_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/txt_blue"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player2_blue"
        app:layout_constraintStart_toEndOf="@+id/iv_player2_blue"
        app:layout_constraintTop_toTopOf="@+id/iv_player2_blue" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player3_blue"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="@+id/view_blue_team"
        app:layout_constraintTop_toBottomOf="@+id/iv_player2_blue"
        style="@style/ImageViewPlayerPhotoMatch"
        tools:srcCompat="@drawable/img_profile" />

    <TextView
        android:id="@+id/tv_name_player3_blue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="@string/txt_blue"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player3_blue"
        app:layout_constraintStart_toEndOf="@+id/iv_player3_blue"
        app:layout_constraintTop_toTopOf="@+id/iv_player3_blue" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player1_white"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/view_white_team"
        app:layout_constraintTop_toTopOf="@+id/view_white_team"
        style="@style/ImageViewPlayerPhotoMatch"
        tools:srcCompat="@drawable/img_profile" />

    <TextView
        android:id="@+id/tv_name_player1_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/txt_white"
        android:textColor="@color/navy_blue"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1_white"
        app:layout_constraintEnd_toStartOf="@+id/iv_player1_white"
        app:layout_constraintTop_toTopOf="@+id/iv_player1_white" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player2_white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/view_white_team"
        app:layout_constraintTop_toBottomOf="@+id/iv_player1_white"
        style="@style/ImageViewPlayerPhotoMatch"
        tools:srcCompat="@drawable/img_profile" />

    <TextView
        android:id="@+id/tv_name_player2_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/txt_white"
        android:textColor="@color/navy_blue"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player2_white"
        app:layout_constraintEnd_toStartOf="@+id/iv_player2_white"
        app:layout_constraintTop_toTopOf="@+id/iv_player2_white" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player3_white"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        app:layout_constraintEnd_toEndOf="@id/view_white_team"
        app:layout_constraintTop_toBottomOf="@+id/iv_player2_white"
        style="@style/ImageViewPlayerPhotoMatch"
        tools:srcCompat="@drawable/img_profile" />

    <TextView
        android:id="@+id/tv_name_player3_white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:text="@string/txt_white"
        android:textColor="@color/navy_blue"
        android:textSize="26sp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player3_white"
        app:layout_constraintEnd_toStartOf="@+id/iv_player3_white"
        app:layout_constraintTop_toTopOf="@+id/iv_player3_white" />

</androidx.constraintlayout.widget.ConstraintLayout>