<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".view.activities.MatchActivity">

    <View
        android:id="@+id/main_view"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/azul_marinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_name_app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MeliTruko"
        android:textColor="@color/white"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="@+id/main_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="14dp"
        android:layout_marginBottom="3dp"
        android:background="@drawable/ic_back"
        android:foreground="?attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="@+id/tv_name_app"
        app:layout_constraintStart_toStartOf="@+id/main_view"
        app:layout_constraintTop_toTopOf="@+id/tv_name_app" />

    <TextView
        android:id="@+id/tv_end_game"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Fim de jogo!"
        android:textColor="@color/azul_marinho"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/view_blue_team"
        app:layout_constraintTop_toBottomOf="@id/main_view" />

    <View
        android:id="@+id/view_blue_team"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginStart="-2dp"
        android:layout_marginTop="30dp"
        android:background="@color/azul_marinho"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_end_game"/>

    <View
        android:id="@+id/view_white_team"
        android:layout_width="match_parent"
        android:layout_height="160dp"
        android:layout_marginTop="16dp"
        android:layout_marginStart="-4dp"
        android:layout_marginEnd="-4dp"
        android:background="@drawable/style_end_game_white_team"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvXis" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player1_blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_player2_blue"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/view_blue_team"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_blue_team"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/img_perfil" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player2_blue"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/img_perfil"
        app:layout_constraintEnd_toEndOf="@+id/view_blue_team"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_player1_blue"
        app:layout_constraintTop_toBottomOf="@+id/tv_name_blue_team" />

    <TextView
        android:id="@+id/tv_name_blue_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Azul"
        android:layout_marginTop="4dp"
        android:textColor="@color/white"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/view_blue_team"
        app:layout_constraintStart_toStartOf="@+id/view_blue_team"
        app:layout_constraintTop_toTopOf="@+id/view_blue_team" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player1_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="14dp"
        app:layout_constraintEnd_toStartOf="@+id/iv_player2_white"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="@id/view_white_team"
        app:layout_constraintTop_toBottomOf="@+id/tv_white_team_score"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/img_perfil" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_player2_white"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="14dp"
        android:layout_marginTop="10dp"
        app:shapeAppearanceOverlay="@style/circleImageView"
        app:srcCompat="@drawable/img_perfil"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player1_white"
        app:layout_constraintEnd_toEndOf="@+id/view_white_team"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_player1_white"
        app:layout_constraintTop_toBottomOf="@+id/tv_white_team_score" />

    <TextView
        android:id="@+id/tv_name_white_team"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Branco"
        android:layout_marginTop="10dp"
        android:textColor="@color/azul_marinho"
        android:textSize="26sp"
        app:layout_constraintEnd_toEndOf="@+id/view_white_team"
        app:layout_constraintStart_toStartOf="@+id/view_white_team"
        app:layout_constraintTop_toBottomOf="@+id/iv_player1_white" />

    <TextView
        android:id="@+id/tvXis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="X"
        android:textColor="@color/azul_marinho"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view_blue_team" />

    <TextView
        android:id="@+id/tv_blue_team_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:text="12"
        android:textColor="@color/white"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/iv_player1_blue" />

    <TextView
        android:id="@+id/tv_white_team_score"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="@color/azul_marinho"
        android:textSize="34sp"
        app:layout_constraintTop_toTopOf="@+id/view_white_team"
        tools:layout_editor_absoluteX="191dp" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btn_new_game"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:text="Novo jogo"
        android:textColor="@color/white"
        android:textSize="36sp"
        android:padding="8dp"
        app:cornerRadius="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>