<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_dialog_container"
    android:layout_width="300dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/style_players_list"
    android:padding="20dp">

    <ImageButton
        android:id="@+id/iv_player_1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/style_players_list"
        android:padding="10dp"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_add_image"
        app:layout_constraintEnd_toStartOf="@+id/tv_player_1"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/cd_btn_add_player_image" />

    <EditText
        android:id="@+id/tv_player_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="@string/txt_hint_insert_player_name"
        android:textColor="@color/navy_blue"
        android:textSize="20sp"
        android:maxEms="30"
        android:layout_marginStart="10dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_player_1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/iv_player_1"
        app:layout_constraintTop_toTopOf="@+id/iv_player_1"
        android:autofillHints="Nome do jogador" />

</androidx.constraintlayout.widget.ConstraintLayout>